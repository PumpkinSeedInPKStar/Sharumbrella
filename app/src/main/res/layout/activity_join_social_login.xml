<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".join_social_login">

    <View
        android:id="@+id/logo"
        android:layout_width="142dp"
        android:layout_height="77dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="135dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="35dp"
        android:background="@drawable/orangelogo"
        />

    <ImageButton
        android:id="@+id/googlejoin"
        android:layout_width="304dp"
        android:layout_height="66dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="170dp"
        android:background="@drawable/joinsl_joingoogle"
        android:contentDescription="Google 회원가입"
        />

    <ImageButton
        android:id="@+id/facebookjoin"
        android:layout_width="304dp"
        android:layout_height="66dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="265dp"
        android:background="@drawable/joinsl_joinfacebook"
        android:contentDescription="페이스북 회원가입"
        />

    <ImageButton
        android:id="@+id/kakaojoin"
        android:layout_width="304dp"
        android:layout_height="66dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="360dp"
        android:background="@drawable/joinsl_joinkakao"
        android:contentDescription="카카오 회원가입"
        />
    <ImageButton
        android:id="@+id/backtojoin"
        android:layout_width="180dp"
        android:layout_height="18dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="475dp"
        android:background="@drawable/joinsl_backtojoin"
        android:contentDescription="회원 가입 화면으로 돌아가기"
        />
</RelativeLayout>